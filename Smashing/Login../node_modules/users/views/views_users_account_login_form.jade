include ./mixins/views_mixins_forms.jade

div( class = 'input-group' )

  form( action = '/account/login',
        method = 'post',
        class = 'navbar-form' )

    - if ( identity_field == undefined || identity_fieldname == undefined )

      p.message Dear site administrator; Users Passport or Users Routes is missing identity_field / identity_fieldname configuration.

    mixin field( 'text', identity_field, identity_fieldname )

    mixin field( 'password', 'password', 'Password' )

    p

      a( href = '/account/password/reset' ) Forgot your password?

    div

      mixin button_submit( 'Login' )
