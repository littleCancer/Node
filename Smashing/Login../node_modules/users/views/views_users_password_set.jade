include ./mixins/views_mixins_forms.jade

include ./common/views_html5.jade

include ./common/views_header

h3( class = 'title' ) #{ heading }

div( class = 'panel panel-warning' )

  div( class = 'panel-heading' )

    p( class = 'panel-title' ) Please choose a complex password with at least six characters.

  form( action = '/account/password/set/#{email}', method = 'post' )

    div( class = 'row' )

      div( class = 'col-lg-6' )

        mixin field( 'password', 'password', 'Password' )

        mixin field( 'password', 'password_confirm', 'Password Confirm' )

        mixin button_submit( 'Submit' )

include ./common/views_footer