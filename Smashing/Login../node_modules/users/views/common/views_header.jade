

include ../mixins/views_mixins_forms

- if ( user != undefined )

  div( class = 'navbar' )

    ul( class = 'nav navbar-nav' )

      li( class = 'dropdown' )
        a( href = '#', class = 'dropdown-toggle', data-toggle = 'dropdown' )
            h4 Home
            h6() Your favorites and profile

        ul( class = 'dropdown-menu', style = 'box-shadow: 0 6px 3px rgba(0, 0, 0, 0.05); cursor: pointer; width: 168px' )

          li( class = 'btn-large' )
            a() Favorites
          li( class = 'btn-large' )
            a() My Profile

      li( class = 'dropdown' )
        a( href = '#', class = 'dropdown-toggle', data-toggle = 'dropdown', href = '#' )
            h4 Users
            h6() Create and manage users

        ul( class = 'dropdown-menu', style = 'box-shadow: 0 6px 3px rgba(0, 0, 0, 0.05); cursor: pointer; width: 172px' )

          li( class = 'btn-large' )
            a( href = '/admin/users' ) List
          li( class = 'btn-large' )
            a( href = '/admin/users/new' ) Create

      - if ( 1 === 2 )

        li( class = 'dropdown' )
          a( href = '#', class = 'dropdown-toggle', data-toggle = 'dropdown', href = '#' )
              h4 Platforms
              h6() Create and manage your apps and sites

          ul( class = 'dropdown-menu', style = 'box-shadow: 0 6px 3px rgba(0, 0, 0, 0.05); cursor: pointer; width: 251px' )

            li( class = 'btn-large' )
              a() List
            li( class = 'btn-large' )
              a() Create

    a( class = 'navbar-brand pull-right dropdown-toggle', data-toggle = 'dropdown', href = '#' )
      h4  #{ user.username }
        span( class = 'caret' )
      h6() Your account

    ul( class = 'dropdown-menu pull-right', style = 'box-shadow: 0 6px 3px rgba(0, 0, 0, 0.05); cursor: pointer' )

      li( class = 'btn-large' )
        a() Favorites
      li( class = 'btn-large' )
        a( href = '/account' ) Account
      li( class = 'btn-large' )
        a( href = '/#{ user.username }' ) Profile
      li( class = 'btn-large' )
        a( href = '/account/logout') Logout

p( class = 'message cela-message' )= message
p( class = 'error cela-error' )= error
