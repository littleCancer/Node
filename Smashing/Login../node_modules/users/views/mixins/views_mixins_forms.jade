

mixin field( type, name, label )

  .field( class = 'field-' + type )

    label( class = 'label label-info' ) #{ label }

    input( type = type, name = name, class = 'form-control input-large', placeholder = label )



mixin field_hidden( name, options )

  - if ( options == undefined ) { var options = {}; }

  - if ( options.value == undefined ) { options.value = ''; }

  input( type = 'hidden', name = name, value = options.value )



mixin checkbox( name, label )

  .field( class = 'checkbox')

    label( class = 'label label-info' ) #{ label }

    input( type = 'checkbox', name = name )
 

mixin button_submit( value, options )

  - if ( options == undefined ) { var options = {} }

  - if ( options.size == undefined ) { options.size = 'default' }

  .button( class = 'field-button' )

    input( type = 'submit', value = value, class = 'btn btn-#{options.size}', style = 'margin-bottom: 20px' )

