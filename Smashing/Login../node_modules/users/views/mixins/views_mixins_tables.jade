
include views_mixins_forms


mixin users_table_striped( users, options )

  - if ( options == undefined ) var options = {};

  table( class = 'table table-striped' )

    tr
      - if ( options.select )
        th Select
      - // th Username
      th id
      th Email
      th Name
      th Roles

    each user in users
      tr
        - if ( options.select == true )
          td
            mixin checkbox( 'select', 'Select' )
        - // td= user.username
        td= user._id
        td= user.email
        td= user.name
        td= user.roles


mixin panel_users_table_striped( users, options )

  - if ( options == undefined ) { var options = {} }

  div( class = 'panel panel-info' )

    div( class = 'panel-heading' )

      - if (heading == undefined) var heading = 'Data';

      h3( class = 'panel-title' ) #{ heading }

    mixin users_table_striped( users, options )
